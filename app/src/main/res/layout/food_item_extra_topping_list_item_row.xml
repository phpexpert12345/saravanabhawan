<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_0_00"
        android:textSize="18sp"
        android:visibility="gone"
        android:id="@+id/txt_group"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkBoxFoodItemExtraTopping"
        android:layout_width="wrap_content"
        android:layout_below="@+id/txt_group"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:text="Food Item Extra Topping" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewFoodItemExtraToppingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/_0_00" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/recyler_extras"
        tools:listitem="@layout/layout_cart_item"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@+id/textViewFoodItemExtraToppingPrice"
        android:layout_height="wrap_content"/>

</RelativeLayout>
