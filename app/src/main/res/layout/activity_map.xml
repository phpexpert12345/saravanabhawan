<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.harperskebab.view.ui.activities.MapActivity">
    <fragment
        android:id="@+id/fm_mappp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewAppIconMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/layPostCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:padding="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/white_round_corner_bg">
            <EditText
                android:id="@+id/edtPostCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="ENTER YOUR POST CODE"
                android:padding="8dp"
                android:layout_gravity="center"
                android:background="@null"
                android:textColor="#0F090D"
                android:textColorHint="#0F090D"
                android:singleLine="true" />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_search"
                android:layout_gravity="center"
                android:padding="7dp"
                android:tint="#0F090D"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recPostcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/transparent_round_bg"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="Delivery and Pickup Near You"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
       <LinearLayout
           android:id="@+id/layOrderType"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@drawable/white_round_bg"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp">
           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/txtDelivery"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="DELIVERY"
               android:textSize="14sp"
               android:padding="7dp"
               android:textColor="@color/colorWhite"
               android:background="@drawable/left_round_red_bg"
               android:gravity="center"
                />
           <View
               android:id="@+id/viewOne"
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="#4D7D1E"/>
           <com.google.android.material.textview.MaterialTextView
              android:id="@+id/txtPickup"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="PICKUP"
               android:textColor="@color/darkGray"
               android:textSize="14sp"
               android:padding="7dp"
               android:gravity="center"/>
           <View
               android:id="@+id/viewTwo"
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="#4D7D1E"/>
           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/txtEatIn"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="EAT-IN"
               android:textSize="14sp"
               android:textColor="@color/darkGray"
               android:padding="7dp"
               android:gravity="center"/>
       </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_round_corner_bg">
                <EditText
                    android:id="@+id/edtPostCodeClick"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="ENTER YOUR POST CODE"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="#0F090D"
                    android:textColorHint="#0F090D"
                    android:singleLine="true" />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"
                    android:padding="7dp"
                    android:tint="#0F090D"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layViewMenuForDelivery"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/bottom_round_red_bg">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtViewMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="VIEW MENU FOR DELIVERY   âž”"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/laySkip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/green_round_corner_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSkip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="Skip directly to menu"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>